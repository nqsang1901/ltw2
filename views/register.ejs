<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/login.css">
    <title>Internet Banking | Đăng ký</title>
</head>

<body>
    <div class="container">      
        <div class="row">
            <header class="header-area ">
                <nav class="main-nav">
                    <a href="index" class="logo">refund<em> banking</em></a>
                </nav>
            </header>
        </div>
        <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign up</h3>
                </div>
                <div class="panel-body">
                    <form method="POST"  accept-charset="UTF-8" role="form" enctype="multipart/form-data" >
                        <fieldset>
                            <% if(typeof(message) != "undefined") { %>
                                <p style="color: red;"> <%= message %></p>
                            <% } %>
                            <div class="form-group">
                                <input class="form-control" placeholder="User Name" id="username" name="username" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" id="email" name="email" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" id="password" name="password" type="password" value="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Identity Card Number" id="IdentityNumber" name="IdentityNumber" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Date Of Birth (dd/MM/yyyy)" id="DateOfBirth" name="DateOfBirth" type="text">
                            </div>
                            <input type="file" id="myFile" name="avatar" style="margin-bottom: 5px;">
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Tạo tài khoản mới">
                            <div>
                                <hr width="90%" align="center">
                            </div>
                            <a href="login" class="btn btn-lg btn-success btn-block">Đăng nhập ngay</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
       <!-- jQuery -->
       <script src="../public/js/jquery-2.1.0.min.js"></script>
       <script src="../public/js/scrollreveal.min.js"></script>
       <script src="../public/js/custom.js"></script>
</body>

</html>

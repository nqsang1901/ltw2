<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../css/font-awesome.css">
    <link rel="stylesheet" href="../css/templatemo-training-studio.css">
    <title>Internet Banking | Đăng nhập</title>
</head>

<body>
    <header class="header-area header-sticky">
        <div class="container">
            <%- include('../menu');  -%>
        </div>
    </header>
    <section class="section" id="features">
        <div class="container">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- <div class="panel-heading">
                            <h3 class="panel-title">Please sign in</h3>
                        </div> -->
                    <div class="panel panel-default" style="width: 40%; margin: 0 auto;">
                        <div class="panel-body">
                            <form method="POST" accept-charset="UTF-8" role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <%- (currentUser.UserStatusId != 2 ? '<p style="color:brown">Tài khoản của bạn chưa xác thực email hoặc bị khóa</p>' : '') -%>
                                        <p style="color: brown; margin-bottom: 15px;">Số tiền từ 10.000 VNĐ đến 5.000.000 VNĐ</p>
                                        <% if(typeof(message) != "undefined") { %>
                                            <p style="color: red;"> <%= message %></p>
                                        <% } %>
                                        <b>Số tài khoản:</b>
                                        <input class="form-control" placeholder="" id="AccountId" name="AccountId" type="text">
                                        <b>Số tiền muốn chuyển:</b>
                                        <input class="form-control" placeholder="" id="money" name="money" type="text">                    
                                        <b>Xác thực mật khẩu:</b>
                                        <input class="form-control" placeholder="" id="password" name="password" type="password">
                                        <b>Nội dung:</b>
                                        <input class="form-control" placeholder="" id="content" name="content" type="text">
                                        <input class="btn btn-lg btn-success btn-block" <%- (currentUser.UserStatusId != 2 ? 'disabled="true"' : ' ') -%>  style="margin-top: 10px;" type="submit" value="Gửi ngay">
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

</body>

</html>